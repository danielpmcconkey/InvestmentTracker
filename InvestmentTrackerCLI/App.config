<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<log4net>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level %message%newline" />
			</layout>
		</appender>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="./Logs/log.txt" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="1000KB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="DEBUG" />
			<appender-ref ref="ConsoleAppender" />
			<appender-ref ref="RollingFileAppender" />
		</root>
	</log4net>
	<appSettings>
		<add key="DataDirectory" value="E:/InvestmentTracker/Data/" />
		<add key="FidelityTransactionsFile" value="forwardTransactions/Accounts_History-1.csv"/>
		<add key="TRowePriceTransactionsFile" value="forwardTransactions/acc_history_details.csv"/>
		<add key="HealthEquityTransactionsFile" value="forwardTransactions/InvestmentReport_All.csv"/>
		<add key="InitialTransactionsFileName" value="initialtransactions.csv" />
		<add key="InitialAccountsFileName" value="initialaccounts.csv" />
		<add key="JsonAccountsFileName" value="accounts.dat" />
		<add key="JsonPricesFileName" value="prices.dat" />
		<add key="TimeSpanForDateNearnessEvaluation" value="3.00:00:00" />
		<add key="MinTimeSpanBetweenYahooScrapes" value="0.00:00:02" />
		
		<add key="dbMaxRetries" value="5"/>
		<add key="dbRetrySleepMilliseconds" value="1000"/>
		<!-- monte carlo variables -->
		
		<add key="monthlySpendCoreToday" value="3000" />
		<add key="xMinusAgeStockPercentPreRetirement" value="280.787" />
		<add key="numYearsCashBucketInRetirement" value="0.87" />
		<add key="numYearsBondBucketInRetirement" value="0.97" />
		<add key="recessionRecoveryPercent" value="1.22" />
